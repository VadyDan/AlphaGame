<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView_TW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="Что меньше?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="585dp"
        android:orientation="horizontal"
        android:paddingTop="100sp"
        android:paddingBottom="200sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLeft_F1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/btn_star" />
                <!--android:src="@drawable/bgptichka" -->

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:background="#FDFFD500"
                android:scaleType="centerInside"
                android:text="Ptiza"
                android:textAlignment="center"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewRight_F1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_menu_add" />
                <!--android:src="@drawable/bgkot" />-->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:background="#FDFFD500"
                android:scaleType="centerInside"
                android:text="TextViedr"
                android:textAlignment="center"
                android:textSize="35sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>